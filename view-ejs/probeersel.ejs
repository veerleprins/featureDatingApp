<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %> 
    <title>loveback | Home</title>
</head>

<body class="swipe">
    <header>
        <ul>
            <li><h1>loveback.</h1></li>
            <li><a href="/"><img src="images/logo.svg" alt="Logo loveback"></a></li>
            <li><a href="filters">
                <img src="images/filterIcon.svg" alt="Filter icon">
            </a></li>
        </ul>
    </header>
    <main>
        <ul>
            <% for (let i =0; i <users.length; i++) { %> 
            <li>
                <section>
                    <figure>
                        <img src="images/<%= users[i].picture %> " alt="image person">
                        <a href="" class="info"><img src="images/info.svg" alt=""></a>
                        <% if (users[i].movies[1] != undefined) {%>
                        <p>#<%= users[i].movies[1] %></p>
                        <% } %> 
                        <p>#<%= users[i].movies[0] %></p>
                        <!-- <p>#ActionMovies</p> -->
                        <figcaption>
                            <h2><%= users[i].name %> , <%= users[i].age %> </h2>
                            <h3> <i class="fas fa-map-marker-alt"></i> <%= users[i].location %> </h3>
                            <form action="/">
                                <button><img src="images/noLikeButton.svg" alt="No like"></button>
                                <div></div>
                                <button><img src="images/likeButton.svg" alt="like"></button>
                            </form>    
                        </figcaption>
                    </figure>
                </section>
            </li>
            <% } %> 
        </ul>
    </main>
    <%- include ("partials/footer.ejs") %> 
</body>

</html>