<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %> 
    <title>Home | loveback</title>
</head>

<body class="swipe">
    <%- include ("partials/header.ejs") %>
    <main>
        <ul>
            <% for (let i =0; i <users.length; i++) { %> 
            <li>
                <section>
                    <figure>
                        <img src="images/<%= users[i].picture %>" alt="image person">
                        <a href="" class="info"><img src="images/info.svg" alt=""></a>

                        <% if (users[i].movies[1] != undefined) {%>
                            <p>#<%= users[i].movies[1] %></p>
                            <% } %> 
                            <p>#<%= users[i].movies[0] %></p>
                        <figcaption>
                            <h2><%= users[i].name %> , <%= users[i].age %> </h2>
                            <h3> <%= users[i].location %> </h3>
                            <form action="/">
                                <button><img src="images/noLikeButton.svg" alt="No like"></button>
                                <div></div>
                                <button><img src="images/likeButton.svg" alt="like"></button>
                            </form>    
                        </figcaption>
                    </figure>
                </section>
            </li>
            <% } %> 
        </ul>
        <% if (users.length === 0) { %>
            <section class="noUsersError">
                <h2>Ooooops</h2>
                <img src="images/noUsers.svg" alt="image person">
                <p>Unfortunately, there are no users who meet these preferences yet...</p>
                <a href="filters">Go to filters</a>    
            </section>
        <% } %>
    </main>
    <%- include ("partials/footer.ejs") %> 
</body>

</html>